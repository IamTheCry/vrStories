{
  "knex": {
    "client": "postgresql",
    "connection": {
      "database": "process.env.PG_DB || thesis",
      "user": "process.env.PG_USER || postgres",
      "password": "process.env.PG_PASSWORD || postgres",
      "host": "process.env.PG_URI || localhost",
      "port": 5432
    },
    "pool": {
      "min": 1,
      "max": 2
    },
    "migrations": {
      "tableName": "knex_migrations",
      "directory": "db/migrations"
    },
    "seeds": {
      "directory": "db/seeds"
    }
  },

  "passport": {
    "Google": {},
    "Facebook": {},
    "Twitter": {}
  }
}